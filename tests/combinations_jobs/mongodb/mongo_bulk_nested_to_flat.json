{
  "name": "mongo_bulk_nested_to_flat",
  "strategy_type": "bulk",
  "components": [
    {
      "comp_type": "read_mongodb",
      "name": "read_people",
      "description": "Read nested docs",
      "entity_name": "people_src",
      "context_id": "${MONGO_EXAMPLE_CONTEXT_ID}",
      "routes": { "out": [ { "to": "map_flatten", "in_port": "in" } ] },
      "out_port_schemas": {
        "out": {
          "fields": [
            { "name": "name", "data_type": "string" },
            {
              "name": "address",
              "data_type": "object",
              "children": [
                { "name": "city", "data_type": "string" },
                { "name": "zip", "data_type": "string" }
              ]
            }
          ]
        }
      },
      "query_filter": {}
    },
    {
      "comp_type": "schema_mapping",
      "name": "map_flatten",
      "description": "Flatten nested address fields",
      "extra_input_ports": ["in"],
      "extra_output_ports": ["out"],
      "routes": { "out": [ { "to": "write_flat", "in_port": "in" } ] },
      "in_port_schemas": {
        "in": {
          "fields": [
            { "name": "name", "data_type": "string" },
            {
              "name": "address",
              "data_type": "object",
              "children": [
                { "name": "city", "data_type": "string" },
                { "name": "zip", "data_type": "string" }
              ]
            }
          ]
        }
      },
      "out_port_schemas": {
        "out": {
          "fields": [
            { "name": "name", "data_type": "string" },
            { "name": "address_city", "data_type": "string" },
            { "name": "address_zip",  "data_type": "string" }
          ]
        }
      },
      "rules_by_dest": {
        "out": {
          "name":          { "src_port": "in", "src_path": "name" },
          "address_city":  { "src_port": "in", "src_path": "address.city" },
          "address_zip":   { "src_port": "in", "src_path": "address.zip" }
        }
      }
    },
    {
      "comp_type": "write_mongodb",
      "name": "write_flat",
      "description": "Write flattened docs",
      "entity_name": "people_out_flat",
      "context_id": "${MONGO_EXAMPLE_CONTEXT_ID}",
      "operation": "insert",
      "in_port_schemas": {
        "in": {
          "fields": [
            { "name": "name", "data_type": "string" },
            { "name": "address_city", "data_type": "string" },
            { "name": "address_zip",  "data_type": "string" }
          ]
        }
      }
    }
  ]
}
