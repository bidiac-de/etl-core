{
  "name": "mongo_row_nested_to_nested",
  "strategy_type": "row",
  "components": [
    {
      "comp_type": "read_mongodb",
      "name": "read_people",
      "description": "Read nested docs from source collection",
      "entity_name": "people_src",
      "context_id": "${MONGO_EXAMPLE_CONTEXT_ID}",
      "routes": { "out": [ { "to": "map_nested", "in_port": "in" } ] },
      "out_port_schemas": {
        "out": {
          "fields": [
            { "name": "name", "data_type": "string" },
            {
              "name": "address",
              "data_type": "object",
              "children": [
                { "name": "city", "data_type": "string" },
                { "name": "zip", "data_type": "string" }
              ]
            }
          ]
        }
      },
      "query_filter": {},
      "sort": [["name", 1]]
    },
    {
      "comp_type": "schema_mapping",
      "name": "map_nested",
      "description": "Passthrough/rename from nested to nested",
      "extra_input_ports": ["in"],
      "extra_output_ports": ["out"],
      "routes": { "out": [ { "to": "write_people_out", "in_port": "in" } ] },
      "in_port_schemas": {
        "in": {
          "fields": [
            { "name": "name", "data_type": "string" },
            {
              "name": "address",
              "data_type": "object",
              "children": [
                { "name": "city", "data_type": "string" },
                { "name": "zip", "data_type": "string" }
              ]
            }
          ]
        }
      },
      "out_port_schemas": {
        "out": {
          "fields": [
            { "name": "full_name", "data_type": "string" },
            {
              "name": "loc",
              "data_type": "object",
              "children": [
                { "name": "city", "data_type": "string" },
                { "name": "postal", "data_type": "string" }
              ]
            }
          ]
        }
      },
      "rules_by_dest": {
        "out": {
          "full_name": { "src_port": "in", "src_path": "name" },
          "loc.city":  { "src_port": "in", "src_path": "address.city" },
          "loc.postal":{ "src_port": "in", "src_path": "address.zip" }
        }
      }
    },
    {
      "comp_type": "write_mongodb",
      "name": "write_people_out",
      "description": "Write nested docs to target collection",
      "entity_name": "people_out_nested",
     "context_id": "${MONGO_EXAMPLE_CONTEXT_ID}",
      "operation": "insert",
      "in_port_schemas": {
        "in": {
          "fields": [
            { "name": "full_name", "data_type": "string" },
            {
              "name": "loc",
              "data_type": "object",
              "children": [
                { "name": "city", "data_type": "string" },
                { "name": "postal", "data_type": "string" }
              ]
            }
          ]
        }
      }
    }
  ]
}
