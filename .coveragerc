[run]
source = src
omit =
    */tests/*
    */__pycache__/*
    */migrations/*
    */venv/*
    */env/*
    */node_modules/*
    */dist/*
    */build/*
    */coverage/*
    */htmlcov/*
    */htmlcov_*
    # Critical tests that require real database connections
    tests/components/databases/mariadb/test_real_database_connection.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = htmlcov
